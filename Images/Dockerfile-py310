FROM python:3.10-bullseye

RUN apt-get update
RUN apt-get install -y python3-dev gcc 
RUN apt-get install -y vim

RUN python3.10 -m pip install numpy scikit-learn pandas
RUN python3.10 -m pip install pillow sqlalchemy

RUN mkdir /home/Results
RUN mkdir /home/Measure
COPY ../Measure /home/Measure

WORKDIR /home/Measure
RUN chmod +rx ./run_measure.sh

RUN python3.10 setup.py bdist_wheel
RUN python3.10 -m pip install dist/mymodule-0.1-cp310-cp310-linux_aarch64.whl

ENTRYPOINT ["./run_measure.sh"]
